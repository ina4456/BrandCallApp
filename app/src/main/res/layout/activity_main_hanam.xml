<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <Button
        android:id="@+id/menu_debug"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="processDebug" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_servicemanage"
            style="@style/MenuButton"
            android:background="@drawable/selector_menu_service" />

        <com.thinkware.florida.ui.view.StatusImageView
            android:id="@+id/menu_querycallnum"
            style="@style/MenuButton"
            android:src="@drawable/querycallnum" />

        <com.thinkware.florida.ui.view.StatusImageView
            android:id="@+id/menu_manwait"
            style="@style/MenuButton"
            android:src="@drawable/manwait" />

        <com.thinkware.florida.ui.view.StatusImageView
            android:id="@+id/menu_callerinfo"
            style="@style/MenuButton"
            android:src="@drawable/callerinfo" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="56dp"
        android:orientation="vertical">

        <com.thinkware.florida.ui.view.StatusImageView
            android:id="@+id/menu_notice"
            style="@style/MenuButton"
            android:src="@drawable/notice" />

        <com.thinkware.florida.ui.view.StatusImageView
            android:id="@+id/menu_message"
            style="@style/MenuButton"
            android:src="@drawable/message" />

        <com.thinkware.florida.ui.view.StatusImageView
            android:id="@+id/menu_config"
            style="@style/MenuButton"
            android:src="@drawable/config" />

        <com.thinkware.florida.ui.view.StatusImageView
            android:id="@+id/menu_exit"
            style="@style/MenuButton"
            android:src="@drawable/exit" />
    </LinearLayout>

    <TextView
        android:id="@+id/corporation_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:textColor="#cccccc"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="8dp"
        android:textColor="#cccccc"
        android:textSize="13dp" />

</RelativeLayout>
