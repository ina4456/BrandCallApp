<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="385dp"
    android:layout_height="412dp"
    android:layout_marginLeft="207dp"
    android:layout_marginTop="39dp"
    android:background="@drawable/login1_bg"
    tools:context="com.thinkware.florida.ui.fragment.ServiceManagementFragment">

    <TextView
        android:id="@+id/txt_phonenumber"
        style="@style/txtCenter"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="61dp"
        android:inputType="phone"
        android:maxLength="11"
        android:textSize="38sp" />

    <com.thinkware.florida.ui.view.NumberPadView
        android:id="@+id/numberpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="112dp"
        app:numberPadType="1" />

    <com.thinkware.florida.ui.view.StatusImageView
        android:id="@+id/btn_login"
        android:layout_width="180dp"
        android:layout_height="61dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="338dp"
        android:src="@drawable/login_button" />
</RelativeLayout>
