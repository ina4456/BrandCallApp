<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2d2d2d"
    android:padding="50dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <TextView
                    style="@style/txtHighlightBig"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="미터기" />

                <Button
                    android:id="@+id/btn_retry_tacho"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="재시도"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <TextView
                    style="@style/txtHighlightBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빈차등" />

                <Button
                    android:id="@+id/btn_reserve"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="예약"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_reserve_cancel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="취소"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <TextView
                    style="@style/txtHighlightBig"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="비상버튼" />

                <Button
                    android:id="@+id/btn_emergency_on"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="ON"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_emergency_off"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="OFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <TextView
                    style="@style/txtHighlightBig"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="USB Modem" />

                <Button
                    android:id="@+id/btn_retry_modem"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="재시도"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_meter_status"
                style="@style/txtTestValue"
                android:layout_width="wrap_content"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/txt_light_status"
                style="@style/txtTestValue"
                android:layout_width="wrap_content"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/txt_emergengy_status"
                style="@style/txtTestValue"
                android:layout_width="wrap_content"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/txt_modem_status"
                style="@style/txtTestValue"
                android:layout_width="wrap_content"
                android:layout_height="70dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="완료"
        android:textSize="20sp" />
</RelativeLayout>
