<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fl_container"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/passengerinfo_dp_bg2"
             tools:context="com.thinkware.florida.ui.fragment.PassengerInfoFragment">

    <TextView
        android:id="@+id/txt_callnum"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="178dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/txt_phonenumber"
        android:layout_width="210dp"
        android:layout_height="37dp"
        android:layout_marginTop="79dp"
        android:layout_marginLeft="376dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/color_baff00"/>

    <com.thinkware.florida.ui.view.StatusImageView
        android:id="@+id/btn_call"
        android:layout_width="137dp"
        android:layout_height="52dp"
        android:layout_marginTop="73dp"
        android:layout_marginLeft="600dp"
        android:src="@drawable/call2"/>

    <TextView
        android:id="@+id/txt_passenger_name"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginTop="121dp"
        android:layout_marginLeft="178dp"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/txt_disabled_grade"
        android:layout_width="105dp"
        android:layout_height="37dp"
        android:layout_marginTop="121dp"
        android:layout_marginLeft="390dp"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/txt_wheelchair_yn"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginTop="121dp"
        android:layout_marginLeft="540dp"
        android:gravity="center"
        android:textSize="26sp"
        android:background="@drawable/common_text_box"
        android:textColor="@android:color/white"/>

    <com.thinkware.florida.ui.view.AutoResizeTextView
        android:id="@+id/txt_location"
        android:layout_width="555dp"
        android:layout_height="37dp"
        android:layout_marginTop="164dp"
        android:layout_marginLeft="176dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/txt_location_detail"
        android:layout_width="555dp"
        android:layout_height="115dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="176dp"
        android:padding="10dp"
        android:textSize="30sp"
        android:textColor="@android:color/white"/>

    <com.thinkware.florida.ui.view.AutoResizeTextView
        android:id="@+id/txt_destination"
        android:layout_width="555dp"
        android:layout_height="37dp"
        android:layout_marginTop="324dp"
        android:layout_marginLeft="176dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:maxLines="1"/>

    <com.thinkware.florida.ui.view.StatusImageView
        android:id="@+id/btn_guide"
        android:layout_width="314dp"
        android:layout_height="80dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="62dp"
        android:src="@drawable/guide2"/>

    <com.thinkware.florida.ui.view.StatusImageView
        android:id="@+id/btn_fail"
        android:layout_width="314dp"
        android:layout_height="80dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="424dp"
        android:src="@drawable/fail2"/>

</FrameLayout>
